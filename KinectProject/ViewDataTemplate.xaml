<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:n="clr-namespace:KinectProject.Navigation"
    xmlns:vm="clr-namespace:KinectProject.ViewModels"
    xmlns:v="clr-namespace:KinectProject.Views"
    xmlns:c="clr-namespace:KinectProject.Controls">

    <DataTemplate DataType="{x:Type n:NavigationManager}">
        <c:NavigationBanner />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:AttractScreenViewModel}">
        <v:AttractScreenView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:HomeScreenViewModel}">
        <v:HomeScreenView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ArticleViewModel}">
        <v:ArticleView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:VideoViewModel}">
        <v:VideoView />
    </DataTemplate>

</ResourceDictionary>
